{
  "name": "@spitedb/napi",
  "version": "0.1.0",
  "description": "NAPI bindings for SpiteDB - event store with projections",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "js/**/*.js",
    "js/**/*.d.ts"
  ],
  "napi": {
    "name": "spitedb",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release && tsc -p tsconfig.build.json && node scripts/fix-types.js",
    "build:debug": "napi build --platform && tsc -p tsconfig.build.json && node scripts/fix-types.js",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "universal": "napi universal"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/node": "^20.10.0",
    "bun-types": "^1.3.4",
    "msgpackr": "^1.11.8",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spitedb/spitedb"
  },
  "license": "MIT",
  "keywords": [
    "event-sourcing",
    "event-store",
    "sqlite",
    "napi",
    "projections"
  ]
}
