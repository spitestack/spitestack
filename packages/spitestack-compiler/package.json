{
  "name": "@spitestack/compiler",
  "version": "0.0.1",
  "description": "SpiteStack compiler - convention-based aggregate discovery and code generation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "spitestack": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "dev": "bun run ./src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.3.5"
  },
  "peerDependencies": {
    "@spitestack/db": "workspace:*"
  }
}
